<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/InputLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/gradient_bg"
        android:visibility="gone">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp">
        <EditText
            android:id="@+id/editLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:ems="10">
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/LocationBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Back" />
    </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>
        <TextView
            android:id="@+id/Location0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="24dp">
        </TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>
        <TextView
            android:id="@+id/Location1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="24dp">
        </TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>
        <TextView
            android:id="@+id/Location2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="24dp">
        </TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>
        <TextView
            android:id="@+id/Location3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="24dp">
        </TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>
        <TextView
            android:id="@+id/Location4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="24dp">
        </TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </Space>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/gradient_bg"
        android:visibility="visible"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/launchLocationInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="GO" />

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/weatherContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Loading location"
                android:textSize="24dp">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp">

            </Space>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="..."
                android:textSize="22dp">

            </TextView>

            <ImageView
                android:id="@+id/weatherIconContainer"
                android:layout_width="82dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:src="@drawable/a10d4x">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherContainer"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading status"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="64dp"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="25dp">

            </TextView>

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:orientation="vertical"
                android:text="..."
                android:textSize="70sp">

            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feelsLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Feels like"
                android:textSize="16dp">

            </TextView>

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_above="@+id/detailsContainer"
            android:layout_below="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_marginTop="0dp"
            tools:listitem="@layout/hourly"/>



        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yourbabysoutfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your baby's outfit today:"
                android:textSize="18dp">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/innerlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INNER LAYER"
                        android:textSize="12dp">

                    </TextView>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/secondlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SECOND LAYER"
                        android:textSize="12dp">

                    </TextView>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/outerlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OUTER LAYER"
                        android:textSize="12dp">

                    </TextView>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <ImageView
                        android:id="@+id/iltopimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                    </Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"></Space>

                    <ImageView
                        android:id="@+id/sltopimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"></Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"></Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <ImageView
                        android:id="@+id/oltopimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                    </Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <ImageView
                        android:id="@+id/ilbottomimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                    </Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <ImageView
                        android:id="@+id/slbottomimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                    </Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp">

                    </Space>

                    <ImageView
                        android:id="@+id/olbottomimgview"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_border">

                    </ImageView>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                    </Space>
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">

                </Space>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loader"
        android:layout_centerInParent="true"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ProgressBar>
    <TextView
        android:id="@+id/errortext"
        android:layout_centerInParent="true"
        android:text="Somehting went wrong"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>

</FrameLayout>